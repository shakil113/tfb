                <div id="page-content-wrapper">
            
                  <nav class="navbar navbar-expand-lg border-bottom" style="background-color: #375028;">
                    <button class="btn text-white btn-lg" style="background-color: #521212;" id="menu-toggle">&#x2190;QUIZ MENU</button>
            
                  </nav>
            
                  <div class="container-fluid ">
                      <div class="row content">
                        <div class="col-sm-12 col-lg-9 col-md-8 text-left"> 
 
                              <h3 class="bg-success text-center text-white py-2 mt-2"><marquee behavior="alternate" direction="right">Running Contest</marquee> </h3>

                              <%if(message ==='failed'){%>
                                <div class="bg-danger text-center text-white py-2 rounded-top rounded-bottom" id="s">
                                  <h4>You are not registered!</h4>
                               </div>
                              <%}%>
                              
                              <div class="row my-4" >

                                <% if(runningContest.length >0) {  %>

                                  
                                  <% for(let contest of runningContest) { %>

                                <div class="col-lg-4  col-md-4 portfolio-item mb-5" id="card">
                                  
                                  <div class="card  h-100 text-white "  style="background-color: #19582a">
                                    <button class=" btn  <% if (contest.contestType === false) { %>btn-primary<% } else { %>btn-warning<% } %>"><b><% if (contest.contestType === false) { %>FREE<% } else { %>PAID<% } %></b></button>
                                    <h5 class="mt-2 bg-dark text-center " style="border-radius: 10px 10px 10px 10px; height: 80px; background: linear-gradient(#870000 ,#3a7bd5,#502424 );padding-top: 10px;" ><b>TIME LEFT TO START</b></h5>
                                    <h5 class="mt-2 bg-dark text-center " id="<%=contest.id %>" style="border-radius: 10px 10px 10px 10px; height: 80px; background: linear-gradient(#870000 ,#3a7bd5 );padding-top: 10px;" ></h5>
                                     <div class=" m-2 font-weight-bold detail p-2"   style="background-color:#db51a6; height: 100%;border-radius: 40px 2px 70px 10px;">
                                       <h5 class="mt-4 bg-success text-left p-2 " style="border-radius: 2px 2px 2px 2px;" ><%=contest.contestName %> </h5>

                                              <div class="px-5 d-flex justify-content-center ">
                                                <a href="/enter-contest/<%=contest.id %>"  class="btn bg-dark font-weight-bold mt-4 <% if (contest.contestType===0) { %>disbled<% } else { %>btn-outline-success<% } %>">Enter</a>
                                              </div>                                      
                                        
                                     
                                          <script>
                                            
                                            var time = setInterval(() => {

                                              var dest = new Date('<%=contest.contestDate %>T<%=contest.contestTime %>').getTime();
                                              var current = new Date().toLocaleString("en-US", { timeZone: "Asia/Dhaka", timeZoneName: "short", hourCycle: "h24" }).split(' ');
                                              var currentDate = current[0].split(',')[0];
                                              var currentTime = current[1];                           
                                              var now = new Date(currentDate+' '+currentTime).getTime();
                                              var diff = (dest - now);
                                              var hours = Math.floor((diff%(1000*24*3600))/(1000*3600));
                                              if(hours<0){hours +=1;}
                                              var minutes = Math.floor((diff%(1000*3600))/(1000*60));
                                              if(minutes<0){minutes +=1;}
                                              var seconds = Math.floor((diff%(1000*60))/(1000));

                                              document.getElementById("<%=contest.id %>").innerHTML = hours+"H : "+ minutes+"M : "+seconds+"S";

                                            },1000);
                                          </script>
                                       
                                     </div>
                         
                                  </div>
                                </div>

                                <% } %>
                                <% } else { %> 
                                 
                                 <h2 class="text-center text-danger">No contest found!</h2>
                                  
                              <% } %> 
                                
